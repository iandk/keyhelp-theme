{#
    Select field.

    WARNING: when doing the check for '---', this is TRUE in twig 0 == '---', so we use sameas('---') instead.
#}
{% macro select(params) %}
{% set id = 'input-' ~ params.name %}

<div class="select {{ params.multiple ? 'is-multiple' }} {{ params.is_fullwidth ? 'is-fullwidth' }}">
    <select id="{{ id }}" name="{{ params.name }}" {{ params.multiple ? 'multiple size="'~ params.multiple ~'"' }}>
        {% if params.options.groups %}
            {% if params.options.first %}
                <option>{{ params.options.first }}</option>
            {% endif %}
            {% for group in params.options.groups %}
                <optgroup label="{{ group.label }}">
                    {% for value, label in group.items %}
                        <option value="{{ value }}" {{ params.selected == value ? 'selected' }} {{ value is sameas('---') ? 'disabled' }}>
                            {{- label -}}
                        </option>
                    {% endfor %}
                </optgroup>
            {% endfor %}
        {% else %}
            {% for value, label in params.options %}
                <option value="{{ value }}" {{ params.selected == value ? 'selected' }} {{ value is sameas('---') ? 'disabled' }}>
                    {{- label -}}
                </option>
            {% endfor %}
        {% endif %}
    </select>
</div>
{% endmacro %}

